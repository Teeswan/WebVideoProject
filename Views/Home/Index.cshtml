@model IEnumerable<Youtube_Entertainment_Project.DTOs.VideoDto>

@{
    ViewData["Title"] = "Home – Discover";
}

<div class="container-fluid px-3 px-lg-5 py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 fw-bold mb-1">Discover</h1>
            <p class="text-muted mb-0">Fresh uploads from creators</p>
        </div>

        <div class="d-none d-md-flex gap-2 overflow-auto pb-2">
            <a asp-action="Index"
               class="btn @(ViewBag.SelectedCategory == null ? "btn-dark" : "btn-outline-secondary") btn-sm rounded-pill px-3">
                All
            </a>

            @if (ViewBag.Categories != null)
            {
                foreach (var cat in ViewBag.Categories)
                {
                    bool isActive = ViewBag.SelectedCategory == cat.CategoryId;

                    <a asp-action="Index" asp-route-categoryId="@cat.CategoryId"
                       class="btn @(isActive ? "btn-dark" : "btn-outline-secondary") btn-sm rounded-pill px-3 text-nowrap">
                        @cat.Name
                    </a>
                }
            }
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            @foreach (var v in Model)
            {
                <div class="col">
                    <article class="card h-100 border-0 shadow-sm video-card">
                        <a asp-controller="Video" asp-action="Details" asp-route-id="@v.VideoId" class="thumb-wrap">
                            <img src="@(string.IsNullOrEmpty(v.ThumbnailUrl) ? "/img/video-placeholder.png" : v.ThumbnailUrl)"
                                 class="thumb-media"
                                 alt="@v.Title Preview" />

                            <span class="badge bg-dark badge-pos">NEW</span>
                        </a>

                        <div class="card-body d-flex gap-3">
                            <div class="flex-shrink-0" style="position: relative; z-index: 2;">
                                @{
                                    var channelPic = string.IsNullOrEmpty(v.ChannelOwnerProfileImage)
                                    ? "/images/default-profile.png"
                                    : v.ChannelOwnerProfileImage;

                                    if (!channelPic.StartsWith("/") && !channelPic.StartsWith("http")) channelPic = "/" + channelPic;
                                }
                                <a asp-controller="Channel" asp-action="Details" asp-route-id="@v.ChannelId" title="Go to @v.ChannelName">
                                    <img src="@channelPic"
                                         class="rounded-circle"
                                         style="width: 40px; height: 40px; object-fit: cover; border: 1px solid #eee;"
                                         alt="@v.ChannelName">
                                </a>
                            </div>

                            <div class="flex-grow-1 overflow-hidden">
                                <h5 class="card-title mb-1 text-truncate">
                                    <a asp-controller="Video" asp-action="Details" asp-route-id="@v.VideoId" class="stretched-link text-decoration-none text-dark fw-bold">
                                        @v.Title
                                    </a>
                                </h5>

                                <div style="position: relative; z-index: 2;">
                                    <a asp-controller="Channel" asp-action="Details" asp-route-id="@v.ChannelId"
                                       class="text-muted small text-decoration-none channel-link">
                                        @v.ChannelName
                                    </a>
                                </div>

                                <div class="text-muted small">@v.ViewCount views · @v.CreatedAt.ToShortDateString()</div>
                            </div>
                        </div>
                    </article>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state text-center py-5">
            <h4 class="fw-bold mb-2">No videos yet</h4>
            <p class="text-muted mb-3">Upload your first video to get started.</p>
            <a asp-controller="Video" asp-action="Create" class="btn btn-danger rounded-pill px-4">Upload</a>
        </div>
    }
</div>

<style>
    .video-card {
        border-radius: 14px;
        transition: transform 0.2s ease-in-out;
    }

        .video-card:hover {
            transform: translateY(-5px);
        }

    .thumb-wrap {
        position: relative;
        display: block;
        overflow: hidden;
        border-radius: 14px; /* Fully rounded corners for a modern look */
        aspect-ratio: 16 / 9;
        background: #000;
    }

    .thumb-media {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform .35s ease;
    }

    .video-card:hover .thumb-media {
        transform: scale(1.05);
    }

    .badge-pos {
        position: absolute;
        bottom: 10px; /* YouTube style: bottom right */
        right: 10px;
        opacity: .9;
    }

    .avatar {
        width: 38px;
        height: 38px;
        flex-shrink: 0;
        display: grid;
        place-items: center;
        font-weight: 700;
    }

    .channel-link:hover {
        color: #000 !important;
        text-decoration: underline !important;
    }

    .video-card:hover {
        cursor: pointer;
    }

    .gap-2.overflow-auto {
        white-space: nowrap;
        -ms-overflow-style: none; /* Internet Explorer 10+ */
        scrollbar-width: none; /* Firefox */
    }

        .gap-2.overflow-auto::-webkit-scrollbar {
            display: none; /* Safari and Chrome */
        }
</style>