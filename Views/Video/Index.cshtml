@model IEnumerable<Youtube_Entertainment_Project.DTOs.VideoDto>
@using Microsoft.AspNetCore.Identity
@using Youtube_Entertainment_Project.Data.Entity
@inject UserManager<AppUser> UserManager
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Videos";
    bool canCreate = SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"));
    Guid currentUserId = Guid.Empty;

    if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null) currentUserId = currentUser.Id;
    }
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">🎥 All Videos</h1>

    @if (canCreate)
    {
        <p>
            <a asp-action="Create" class="btn btn-primary btn-lg mb-3">
                <i class="bi bi-plus-circle-fill"></i> Upload New Video
            </a>
        </p>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm align-middle">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Title</th>
                    <th>Channel</th>
                    <th>Thumbnail</th> @* Changed from Preview *@
                    <th><i class="bi bi-eye-fill"></i> Views</th>
                    <th><i class="bi bi-hand-thumbs-up-fill"></i> Likes</th>
                    <th><i class="bi bi-chat-dots-fill"></i> Comments</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var video in Model)
                {
                    bool isOwner = video.ChannelOwnerUserId == currentUserId;
                    bool isSuperAdmin = User.IsInRole("SuperAdmin");
                    bool canManage = isOwner || isSuperAdmin;

                    <tr>
                        <td><strong>@video.Title</strong></td>
                        <td>@video.ChannelName</td>
                        <td>
                            @* ➡️ FIX: Display the Thumbnail instead of a heavy video player *@
                            <div class="position-relative" style="width: 150px;">
                                <img src="@(string.IsNullOrEmpty(video.ThumbnailUrl) ? "/images/default-thumbnail.jpg" : video.ThumbnailUrl)"
                                     alt="Thumbnail"
                                     class="rounded shadow-sm"
                                     style="width: 150px; aspect-ratio: 16/9; object-fit: cover;" />
                            </div>
                        </td>
                        <td>@video.ViewCount</td>
                        <td>@video.LikeCount</td>
                        <td>@video.CommentCount</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@video.VideoId" class="btn btn-sm btn-success me-1" title="Details">
                                <i class="bi bi-play-fill"></i>
                            </a>

                            @if (canManage)
                            {
                                <a asp-action="Edit" asp-route-id="@video.VideoId" class="btn btn-sm btn-warning me-1" title="Edit">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@video.VideoId" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>