@model Youtube_Entertainment_Project.DTOs.CreateVideoDto

@{
    ViewData["Title"] = "Create Video";
}

<style>
    .border-dashed {
        border: 2px dashed #ccc;
        border-radius: 12px;
    }

    #thumbPreview {
        border-radius: 8px;
        width: 100%;
        background: #000;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold"><i class="bi bi-camera-video"></i> Create Video</h1>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back to List</a>
    </div>
    <hr />

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm p-4 rounded-4 mb-4">
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label fw-bold">Title (required)</label>
                        <input asp-for="Title" class="form-control" placeholder="Add a title that describes your video" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Tell viewers about your video"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                <option value="">-- Select Category --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm p-4 rounded-4">
                    <h5 class="fw-bold mb-3">Files</h5>
                    <div class="mb-3">
                        <label asp-for="VideoFile" class="form-label fw-bold">Video File</label>
                        <input asp-for="VideoFile" type="file" class="form-control" accept="video/*" />
                        <span asp-validation-for="VideoFile" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ThumbnailFile" class="form-label fw-bold">Thumbnail</label>
                        <input asp-for="ThumbnailFile" type="file" class="form-control" accept="image/*" id="thumbInput" />
                        <p class="text-muted small mt-1">1280x720 recommended</p>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5">Publish Video</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="sticky-top" style="top: 20px;">
                    <div class="card bg-light border-dashed">
                        <div class="card-body text-center">
                            <p class="fw-bold">Thumbnail Preview</p>
                            <img id="thumbPreview" src="/images/default-thumbnail.jpg" class="shadow-sm" alt="Preview" />
                            <div class="mt-3 text-start">
                                <p class="mb-1 fw-bold text-truncate" id="previewTitle">Your Title Here</p>
                                <p class="text-muted small">@User.Identity.Name</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold"><i class="bi bi-eye me-1"></i> Visibility</label>
                <select name="Visibility" class="form-select">
                    <option value="public" selected>Public (Everyone can see)</option>
                    <option value="private">Private (Only you can see)</option>
                    <option value="unlisted">Unlisted (Anyone with the link can see)</option>
                </select>
                <span class="text-muted small">Choose who can watch this video.</span>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Update Thumbnail Preview
        document.getElementById('thumbInput').onchange = evt => {
            const [file] = evt.target.files;
            if (file) {
                document.getElementById('thumbPreview').src = URL.createObjectURL(file);
            }
        }

        // Live Title Preview
        const titleInput = document.querySelector('input[name="Title"]');
        const previewTitle = document.getElementById('previewTitle');
        titleInput.addEventListener('input', () => {
            previewTitle.innerText = titleInput.value || "Your Title Here";
        });
    </script>
}