@model Youtube_Entertainment_Project.DTOs.SuperAdminDashboardDto

@{
    ViewData["Title"] = "Super Admin Dashboard";
}

<div class="container-fluid px-4 py-4">

    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 fw-bold mb-1">Super Admin Dashboard</h1>
            <p class="text-muted mb-0">System-wide control and administrator management</p>
        </div>
        <span class="badge bg-danger fs-6 px-3 py-2">SUPER ADMIN</span>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card stat-card bg-gradient-danger text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase small opacity-75">Active Admins</div>
                            <div class="display-6 fw-bold">@Model.TotalAdmins</div>
                        </div>
                        <i class="bi bi-shield-lock-fill fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card stat-card bg-gradient-secondary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase small opacity-75">Total Users</div>
                            <div class="display-6 fw-bold">@Model.TotalUsers</div>
                        </div>
                        <i class="bi bi-people-fill fs-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Management -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white fw-bold">
            Administrator Management
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var admin in Model.AdminUsers)
                        {
                            <tr>
                                <td class="fw-semibold">@admin.UserName</td>
                                <td class="text-muted">@admin.Email</td>
                                <td><span class="badge bg-success">Admin</span></td>
                                <td class="text-end">
                                    <form asp-action="BanUser" method="post" onsubmit="return confirm('This action will permanently ban the user. Continue?');" class="d-inline">
                                        <input type="hidden" name="userId" value="@admin.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Ban</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Promote User -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white fw-bold">Grant Administrator Access</div>
        <div class="card-body">
            <form asp-action="PromoteToAdmin" method="post" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="userId" class="form-control" placeholder="Enter User ID" required />
                </div>
                <div class="col-md-4 d-grid">
                    <button type="submit" class="btn btn-primary">Promote to Admin</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .stat-card {
        border-radius: 16px;
    }

    .bg-gradient-danger {
        background: linear-gradient(135deg, #dc3545, #a71d2a);
    }

    .bg-gradient-secondary {
        background: linear-gradient(135deg, #6c757d, #495057);
    }
</style>
