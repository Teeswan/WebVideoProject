@model Youtube_Entertainment_Project.DTOs.SubscriptionDto

@{
    ViewData["Title"] = "Delete Subscription";
}

<h1>Delete Subscription</h1>

<h3>Are you sure you want to delete this subscription?</h3>

<div>
    <p>Subscriber User ID: @Model.SubscriberUserId</p>
    <p>Channel Owner User ID: @Model.ChannelOwnerUserId</p>
    <p>Subscribed At: @Model.SubscribedAt</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="SubscriberUserId" />

    <input type="hidden" asp-for="ChannelOwnerUserId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>