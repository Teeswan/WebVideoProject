@model Youtube_Entertainment_Project.DTOs.CategoryDto

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 border-danger">
        <h1 class="card-title text-center text-danger mb-4">⚠️ Confirm Delete Category</h1>
        <hr />

        <div class="alert alert-warning text-center fw-bold">
            <h3>Are you sure you want to delete the category <strong>@Model.Name</strong>?</h3>
            <p class="text-danger">Deleting a category may affect videos currently assigned to it.</p>
        </div>

        <dl class="row mt-4">
            <dt class="col-sm-3">Category Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Parent Category ID:</dt>
            <dd class="col-sm-9 text-muted">@(Model.ParentCategoryId?.ToString() ?? "None")</dd>
        </dl>

        <div class="mt-4 text-center">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="CategoryId" />
                <button type="submit" class="btn btn-danger btn-lg me-2">
                    <i class="bi bi-trash-fill"></i> Delete Category
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </div>
    </div>
</div>