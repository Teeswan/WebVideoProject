@model Youtube_Entertainment_Project.DTOs.CategoryDto
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="card-title text-center text-primary mb-4">✨ Create New Category</h1>
        <hr />
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" placeholder="e.g., Gaming, Vlogs, Education" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ParentCategoryId" class="form-label fw-bold">Parent Category</label>
                    <select asp-for="ParentCategoryId" class="form-control" asp-items="@(ViewBag.Categories as SelectList)">
                        <option value="">-- None (Top Level) --</option>
                    </select>
                    <small class="form-text text-muted">For subcategories (e.g., 'PC Gaming' under 'Gaming').</small>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-send-fill"></i> Create</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}