@model IEnumerable<Youtube_Entertainment_Project.DTOs.CategoryDto>

@{
    ViewData["Title"] = "Categories Management";
    var allCategories = (ViewBag.AllCategories as List<Youtube_Entertainment_Project.DTOs.CategoryDto>) ?? Model.ToList();
}

<div class="container mt-5">
    <h1 class="mb-4 text-center text-primary">📑 Category Management Panel</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle-fill"></i> Create New Category
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Name</th>
                    <th>Parent Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    string parentName = "None";
                    if (category.ParentCategoryId.HasValue)
                    {
                        var parentCategory = allCategories.FirstOrDefault(c => c.CategoryId == category.ParentCategoryId.Value);
                        parentName = parentCategory?.Name ?? "ID Missing";
                    }

                    <tr>
                        <td>@category.Name</td>
                        <td>@(parentName)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-sm btn-success me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>