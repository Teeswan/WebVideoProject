@model Youtube_Entertainment_Project.DTOs.CategoryDto

@{
    ViewData["Title"] = "Category Details: " + Model.Name;
    var allCategories = (ViewBag.AllCategories as List<Youtube_Entertainment_Project.DTOs.CategoryDto>);
    string parentName = "None";
    if (Model.ParentCategoryId.HasValue)
    {
        var parentCategory = allCategories?.FirstOrDefault(c => c.CategoryId == Model.ParentCategoryId.Value);
        parentName = parentCategory?.Name ?? "ID Missing";
    }
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="card-title text-center text-success mb-4">Details: @Model.Name</h1>
        <hr />

        <dl class="row mt-3">
            <dt class="col-sm-3">Category ID:</dt>
            <dd class="col-sm-9 text-muted">@Model.CategoryId</dd>

            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Parent Category:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-secondary">@(parentName)</span>
            </dd>
        </dl>

        <div class="mt-4 text-center">
            <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning btn-lg me-2">
                <i class="bi bi-pencil-fill"></i> Edit Category
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
        </div>
    </div>
</div>