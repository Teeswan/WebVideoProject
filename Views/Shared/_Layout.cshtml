<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Youtube_Entertainment_Project</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/Youtube_Entertainment_Project.styles.css" asp-append-version="true" />

    <style>
        #navbarDropdownNotifications .bi-bell {
            cursor: pointer;
            color: #030303;
        }

        #notificationCount {
            font-size: 0.65rem;
            padding: 0.25em 0.45em;
        }

        #notificationItems {
            padding: 0;
            margin: 0;
        }

            #notificationItems::-webkit-scrollbar {
                width: 4px;
            }

            #notificationItems::-webkit-scrollbar-thumb {
                background: #ccc;
                border-radius: 10px;
            }

        #toastLink:hover .toast-body {
            background-color: #f8f9fa;
            transition: 0.2s;
            cursor: pointer;
        }

    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand text-danger fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    Video Streaming
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-fill"></i> Home</a>
                        </li>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Category" asp-action="Index"><i class="bi bi-tags-fill"></i> Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Channel" asp-action="Index"><i class="bi bi-person-lines-fill"></i> Channels</a>
                            </li>

                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Playlist" asp-action="Index"><i class="bi bi-music-note-list"></i> Playlists</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Subscription" asp-action="GetMySubscriptions"><i class="bi bi-people-fill"></i> Subscriptions</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link position-relative" href="#" id="navbarDropdownNotifications" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-bell" style="font-size: 1.2rem;"></i>
                                    @await Component.InvokeAsync("NotificationCount")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2" aria-labelledby="navbarDropdownNotifications" style="width: 320px; max-height: 450px; overflow-y: auto;">
                                    <li class="p-2 border-bottom bg-white sticky-top">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="fw-bold small">Notifications</span>
                                            <a href="javascript:void(0);" class="small text-decoration-none" onclick="markAllAsRead()">Mark all as read</a>
                                        </div>
                                    </li>

                                    <li id="notificationItems">
                                        @await Component.InvokeAsync("NotificationList")
                                    </li>

                                    <li class="border-top text-center bg-white sticky-bottom">
                                        <a asp-controller="Notifications" asp-action="Index" class="dropdown-item text-center small text-primary fw-bold py-2">
                                            View all notifications
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <form class="d-flex mx-auto w-50" asp-controller="Search" asp-action="Index" method="get">
                        <div class="input-group">
                            <input name="query" class="form-control rounded-start-pill ps-4" type="search" placeholder="Search videos..." aria-label="Search">
                            <button class="btn btn-outline-secondary rounded-end-pill px-4" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-2">
                                <a class="nav-link text-dark" asp-controller="Video" asp-action="Create">
                                    <i class="bi bi-camera-video" style="font-size: 1.2rem;"></i>
                                </a>
                            </li>

                        }
                    </ul>
                    
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1100">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-dark text-white">
                <i class="bi bi-play-circle-fill me-2 text-danger"></i>
                <strong class="me-auto">New Activity</strong>
                <small>Just now</small>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <a id="toastLink" href="#" class="text-decoration-none text-dark">
                <div class="toast-body d-flex justify-content-between align-items-center">
                    <span id="toastMessage"></span>
                    <span class="btn btn-sm btn-outline-danger ms-2">View</span>
                </div>
            </a>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Video Streaming Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.reply-toggle').on('click', function () {
                var targetId = $(this).data('target');
                $('#' + targetId).toggleClass('d-none');
            });

            $('.cancel-reply').on('click', function () {
                var targetId = $(this).data('target');
                $('#' + targetId).addClass('d-none');
                $('#' + targetId).find('textarea[name="content"]').val('');
            });
        });

                const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .build();

        connection.on("ReceiveNotification", function (data) {
            const badge = document.getElementById("notificationCount");
            if(badge) {
                badge.classList.remove("d-none");
                let currentCount = parseInt(badge.innerText) || 0;
                badge.innerText = currentCount + 1;
            }

            const list = document.getElementById("notificationItems");
            if (list) {
                if (list.innerHTML.includes("No new notifications")) {
                    list.innerHTML = "";
                }

                const newItem = `
                    <div class="border-bottom">
                        <a class="dropdown-item d-flex align-items-center py-2" href="${data.link}">
                            <img src="${data.thumbnail}" class="rounded-circle me-2" style="width:32px; height:32px; object-fit:cover;">
                            <div class="text-wrap" style="font-size: 0.85rem;">
                                <strong>New alert!</strong><br>
                                <span class="text-muted">${data.message}</span>
                            </div>
                        </a>
                    </div>`;

                list.insertAdjacentHTML('afterbegin', newItem);
            }

               const toastElement = document.getElementById('liveToast');
               const toastMessage = document.getElementById('toastMessage');
               const toastLink = document.getElementById('toastLink');

        if (toastElement && toastMessage) {
            toastMessage.innerText = data.message;

            if (toastLink) {
                toastLink.href = data.link;
            }

            const toast = new bootstrap.Toast(toastElement);
            toast.show();
            }
        });

        connection.start().catch(err => console.error(err.toString()));

        const notifyBtn = document.getElementById('navbarDropdownNotifications');
        if(notifyBtn) {
            notifyBtn.addEventListener('show.bs.dropdown', function () {
                const badge = document.getElementById("notificationCount");
                if (badge) {
                    badge.classList.add("d-none");
                    badge.innerText = "0";
                }
            });
        }

                function deleteNotification(id) {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            fetch(`/Notifications/Delete/${id}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': token,
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (response.ok) {
                    const element = document.getElementById(`notif-${id}`);
                    if (element) {
                        element.style.transition = "all 0.3s ease";
                        element.style.opacity = "0";
                        element.style.transform = "translateX(20px)";
                        setTimeout(() => {
                            element.remove();
                            checkIfEmpty();
                        }, 300);
                    }
                }
            })
            .catch(error => console.error('Error deleting notification:', error));
        }

        function markAllAsRead() {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            fetch('/Notifications/MarkAllRead', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': token
                }
            })
            .then(response => {
                if (response.ok) {
                    const bellBadge = document.querySelector('#navbarDropdownNotifications .badge');
                    if (bellBadge) bellBadge.remove();

                    document.querySelectorAll('#notificationItems .badge').forEach(el => el.remove());
                    document.querySelectorAll('#notificationItems .bg-light').forEach(el => {
                        el.classList.remove('bg-light');
                    });
                }
            })
            .catch(error => console.error('Error marking notifications as read:', error));
        }

        function checkIfEmpty() {
            const list = document.querySelector(".list-group-flush"); 
            const dropdownList = document.getElementById("notificationItems"); 

            if (list && list.children.length === 0) {
                location.reload(); 
            }
        }

    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>