@page
@model Youtube_Entertainment_Project.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h2>Profile Settings</h2>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<form method="post" enctype="multipart/form-data" class="mt-3">
    <div class="form-group">
        <label>Profile Picture</label><br />

        @if (Model.Input.ExistingProfileImage != null)
        {
            <img src="@Model.Input.ExistingProfileImage"
                 width="150"
                 height="150"
                 style="border-radius:50%;object-fit:cover" />
        }
        else
        {
            <p>No profile picture uploaded.</p>
        }
    </div>

    <div class="form-group mt-2">
        <label asp-for="Input.ProfileImage">Upload New Image</label>
        <input asp-for="Input.ProfileImage" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>

<form method="post" asp-page-handler="DeletePhoto">
    <button class="btn btn-danger mt-3">Delete Picture</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
